{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:GetItem",
        "dynamodb:Scan",
        "dynamodb:Query",
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:ap-east-1:*:table/UserPreferences",
        "arn:aws:dynamodb:ap-east-1:*:table/Articles",
        "arn:aws:dynamodb:ap-east-1:*:table/Posts",
        "arn:aws:dynamodb:ap-east-1:*:table/UserBehavior"
      ]
    }
  ]
}
